<?xml version="1.0" encoding="UTF-8" ?>
<Container VerticalAlignment="Top" Margin="10" Width="200" Height="100" Focusable="true">
	<Border BorderWidth="1" CornerRadius="10">
		<Group Margin="5" Background="0.2,0.2,0.2,0.9">
			<HorizontalStack Height="Fit" VerticalAlignment="Top">
				<Border BorderWidth="2" Margin="2" CornerRadius="5" Width="30" Height="30"
					Background="0.8,0.8,0.8,0.2">
	<!--				<Image Name="pic"  Path="image2/normal.svg"/>-->
				</Border>
				<Label Text="{Name}" Font="MagicMedieval, 22" TextAlignment="Left"/>
				<GraphicObject/>
				<Label Text="{LifePoints}" Font="MagicMedieval, 30"
					Margin="5" Background="CornflowerBlue" Fit="true" TextAlignment="TopLeft"
					VerticalAlignment="Top"/>
			</HorizontalStack>
			<ListBox Data="{ManaPoolElements}" 
					Fit="true" VerticalAlignment="Bottom" HorizontalAlignment="Center"
					ItemTemplate="#MagicCrow.ui.CostItem.Template"
					Template="#MagicCrow.ui.ImgList.Template"/>
			<ProgressBar Value="{ProgressValue}" Maximum="{ProgressMax}" CornerRadius="0"
						VerticalAlignment="Bottom" HorizontalAlignment="Right"
						Width="80" Height="6"
						Foreground="BlueCrayola" Background="DarkGray"/>
	<!--		<VerticalStack Fit="true" VerticalAlignment="Bottom" HorizontalAlignment="Left">
				<HorizontalStack>
					<Label Text="Progress Value"/>
					<Label Text="{ProgressValue}"/>
				</HorizontalStack>
				<HorizontalStack>
					<Label Text="Progress Max"/>
					<Label Text="{ProgressMax}"/>
				</HorizontalStack>
			</VerticalStack>-->
		</Group>
	</Border>
</Container>


